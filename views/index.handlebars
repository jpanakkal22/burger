<div class="row d-flex justify-content-center">
  <div class="col-sm-4 text-center">
    <h1>Eat-da-Burger!</h1>   
  </div>
</div>



<div class="row">
  <div class="col-sm-4">
    <ol>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>
  <div class="col-sm-4">
    <h5>Enter a burger that you want to smash!</h5>
      <form class="create-form">
        <div class="form-group d-flex justify-content-center">          
          <textarea type="text" id="bg" name="burger_name" cols="50"></textarea>
        </div>
        <button  class="center" type="submit">Submit</button>
      </form>
  </div>
  <div class="col-sm-4">
    <ol>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>




